<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="30dp"
        android:paddingTop="30dp"
        android:orientation="horizontal"
        tools:ignore="RtlSymmetry">
        <ImageButton
            android:id="@+id/back_button"
            android:contentDescription="@string/back_button"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/arrow_small_left"
            android:background="@color/background">
        </ImageButton>
        <TextView
            android:id="@+id/titleMessages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@string/newProduct"
            android:textColor="@color/fontColour2"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:paddingBottom="80dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/picturePlace"
            android:contentDescription="@string/your_product_s_image"
            android:layout_width="300dp"
            android:layout_height="230dp"
            android:background="@color/accentColour2"
            android:scaleType="centerCrop" />

        <Button
            android:id="@+id/selectImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/redish"
            android:text="@string/add_pic" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/details_about_your_product"
            android:textColor="@color/accentColour1"
            android:textSize="25sp"
            android:textStyle="bold"
            android:paddingBottom="10dp"
            android:paddingTop="30dp"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:textColor="@color/accentColour2"
            android:textSize="15sp" />
            <EditText
                android:id="@+id/nameProduct"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:inputType="text"
                android:hint="@string/name"
                android:textColorHint="@color/fontColour1"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:autofillHints="name"
                android:background="@color/inputFieldColor"
                android:textColor="@color/fontColour1">
            </EditText>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/categories"
            android:textColor="@color/accentColour2"
            android:layout_marginTop="25dp"
            android:textSize="15sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/menu"
            android:contentDescription="@string/dropdown_categories"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColorHint="@color/fontColour1">

            <AutoCompleteTextView
                android:id="@+id/options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:hint="@string/select"
                android:background="@color/inputFieldColor"
                android:textColor="@color/fontColour1"/>

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/descriere"
            android:textColor="@color/accentColour2"
            android:layout_marginTop="25dp"
            android:textSize="15sp" />


        <EditText
            android:id="@+id/description_text_input"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:hint="@string/description"
            android:inputType="text"
            android:autofillHints=""
            android:textColorHint="@color/fontColour1"
            android:layout_marginTop="5dp"
            android:background="@color/inputFieldColor"
            android:textColor="@color/fontColour1"
            android:padding="10dp">
        </EditText>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/price"
            android:textColor="@color/accentColour2"
            android:layout_marginTop="25dp"
            android:textSize="15sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/price"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="25dp"
                android:layout_gravity="start"
                android:padding="10dp"
                android:inputType="text"
                android:hint="@string/price"
                android:autofillHints=""
                android:background="@color/inputFieldColor"
                android:textColor="@color/fontColour1"
                android:textColorHint="@color/fontColour1"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/menuPrice"
                android:contentDescription="@string/dropdown_categories"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:textColorHint="@color/fontColour1">

                <AutoCompleteTextView
                    android:id="@+id/optionsPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:hint="@string/type_of_packaging"
                    android:background="@color/inputFieldColor"
                    android:textColor="@color/fontColour1"/>

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <Button
            android:id="@+id/addItem"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/accentColour1"
            android:padding="15dp"
            android:text="@string/addItem"
            android:textColor="@color/accentColour2"
            android:textSize="20sp" />

    </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/round_edge_color"
        android:orientation="horizontal"
        android:gravity="center"
        android:elevation="8dp"
        android:padding="7dp">

        <ImageButton
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/accentColour1"
            android:contentDescription="@string/home"
            android:padding="25dp"
            android:src="@drawable/home"></ImageButton>

        <ImageButton
            android:id="@+id/products"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/accentColour1"
            android:contentDescription="@string/products"
            android:padding="25dp"
            android:src="@drawable/loading"></ImageButton>

        <ImageButton
            android:id="@+id/wishlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/accentColour1"
            android:contentDescription="@string/wishlist"
            android:padding="25dp"
            android:src="@drawable/heart"></ImageButton>

        <ImageButton
            android:id="@+id/profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/accentColour1"
            android:contentDescription="@string/your_profile"
            android:padding="25dp"
            android:src="@drawable/user"></ImageButton>
    </LinearLayout>
</RelativeLayout>