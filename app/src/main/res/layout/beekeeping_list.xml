<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingStart="30dp"
            android:paddingTop="30dp"
            android:orientation="horizontal"
            tools:ignore="RtlSymmetry">
            <ImageButton
                android:id="@+id/back_button"
                android:contentDescription="@string/place_for_a_picture"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/arrow_small_left"
                android:background="@color/background">
            </ImageButton>
            <TextView
                android:id="@+id/titleMessages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="@string/beekeeping"
                android:textColor="@color/accentColour2"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>
        <TextView
            android:id="@+id/recAdded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/popular_in_this_category"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/accentColour1"
            android:padding="15dp"
            android:layout_marginTop="25dp"
            android:layout_marginStart="15dp">
        </TextView>
        <HorizontalScrollView
            android:id="@+id/horizontalScrollRecAdded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp"
            android:foregroundGravity="center_vertical">

            <LinearLayout
                android:id="@+id/arrayProductsRecAdded"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:foregroundGravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">

            </LinearLayout>
        </HorizontalScrollView>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/addedRecently"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/allProd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/added_recently_in_this_category"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@color/accentColour1"
                    android:padding="15dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginStart="15dp">
                </TextView>
            </LinearLayout>

        </ScrollView>
                <!-- <Button
                      android:id="@+id/buttonProduct"
                      android:layout_width="match_parent"
                      android:layout_height="120dp"
                      android:layout_marginTop="30dp"
                      android:background="@drawable/list_element"
                      android:drawablePadding="8dp"
                      android:text="Product name"
                      android:textSize="20dp"
                      android:textAlignment="textStart"
                      android:textColor="@color/accentColour2"
                      android:contentDescription="Button Product" />

                  <ImageView
                      android:id="@+id/picturePlace"
                      android:layout_width="150dp"
                      android:layout_height="100dp"
                      android:layout_marginTop="40dp"
                      android:layout_marginLeft="170dp"
                      android:background="@color/inputFieldColor" />-->
            </LinearLayout>
    <LinearLayout
        android:id="@+id/nav"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding = "10dp"
        android:background="@color/accentColour1">
        <ImageButton
            android:id="@+id/home"
            android:contentDescription="@string/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/accentColour1"
            android:src="@drawable/home"
            android:padding="25dp">
        </ImageButton>
        <ImageButton
            android:id="@+id/message"
            android:contentDescription="@string/messages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/accentColour1"
            android:src="@drawable/envelope"
            android:padding="25dp">
        </ImageButton>
        <ImageButton
            android:id="@+id/products"
            android:contentDescription="@string/products"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/accentColour1"
            android:src="@drawable/loading"
            android:padding="25dp">
        </ImageButton>
        <ImageButton
            android:id="@+id/wishlist"
            android:contentDescription="@string/wishlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/accentColour1"
            android:src="@drawable/heart"
            android:padding="25dp">
        </ImageButton>
        <ImageButton
            android:id="@+id/profile"
            android:contentDescription="@string/your_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/accentColour1"
            android:src="@drawable/user"
            android:padding="25dp">
        </ImageButton>
    </LinearLayout>
</RelativeLayout>