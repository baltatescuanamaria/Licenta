<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:paddingEnd="30dp"
    android:paddingStart="30dp"
    tools:context=".ForgotPasswordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="-15dp"
            android:layout_marginTop="25dp"
            android:background="@null"
            android:contentDescription="Back"
            android:onClick="backButtonClick"
            android:src="@drawable/arrow_small_left"></ImageButton>

        <TextView
            android:id="@+id/Greeting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/forgotPassword"
            android:textColor="@color/fontColour1"
            android:textSize="30dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="40dp">

        <View
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_marginTop="40dp"
            android:layout_height="2dp"
            android:background="@color/accentColour2" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:text="@string/writeEmail"
            android:textColor="@color/fontColour1"
            android:textSize="25dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/email_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_edge"
            android:hint="@string/email"
            android:inputType="text"
            android:textColor="@color/fontColour1"
            android:padding="17dp"
            android:textColorHint="@color/fontColour2"
            android:textSize="17dp" />

            <Button
                android:id="@+id/sendEmail_btn"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="150dp"
                android:backgroundTint="@color/accentColour1"
                android:padding="15dp"
                android:text="@string/sendEmail"
                android:textColor="@color/inputFieldColor"
                android:textSize="3mm" />

    </LinearLayout>

</RelativeLayout>