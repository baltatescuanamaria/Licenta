<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">

        <LinearLayout
            android:id="@+id/search_part"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="30dp">

            <EditText
                android:id="@+id/search"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:hint="@string/search"
                android:inputType="text"
                android:padding="17dp"
                android:layout_marginTop="10dp"
                android:textColorHint="@color/fontColour2"
                android:textSize="17sp"
                android:textStyle="bold"
                android:autofillHints=""
                android:imeOptions="actionDone"
                android:singleLine="true"/>

            <ImageButton
                android:id="@+id/cart"
                android:contentDescription="@string/your_cart"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:src="@drawable/cart_minus_9784373"
                android:backgroundTint="@color/background"
                android:padding="15dp"
                android:layout_marginStart="5dp">
            </ImageButton>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/search_part"
            android:paddingBottom="90dp">
            <LinearLayout
                android:id="@+id/mainLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/categories"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/categories"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:textColor="@color/fontColour1"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="15dp"
                        android:padding="15dp">
                    </TextView>
                    <HorizontalScrollView
                        android:id="@+id/horizontalScroll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginEnd="1dp"
                        android:layout_marginBottom="1dp"
                        android:foregroundGravity="center_vertical">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:foregroundGravity="center"
                            android:gravity="center"
                            android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:layout_marginStart="20dp">

                            <ImageButton
                                android:id="@+id/fruits"
                                android:contentDescription="@string/fruits_image"
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:background="@drawable/fruits" />

                            <TextView
                                android:id="@+id/fruitsTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginTop="10dp"
                                android:text="@string/fruits"
                                android:textSize="20sp"
                                android:textColor="@color/fontColour1"
                                android:layout_gravity="center">
                            </TextView>
                        </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="10dp"
                                android:layout_marginStart="20dp">

                                <ImageButton
                                    android:id="@+id/veggies"
                                    android:contentDescription="@string/vegetable_image"
                                    android:layout_width="150dp"
                                    android:layout_height="150dp"
                                    android:background="@drawable/veggies" />

                                <TextView
                                    android:contentDescription="@string/veggies"
                                    android:id="@+id/veggiesTitle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="10dp"
                                    android:text="@string/veggies"
                                    android:textSize="20sp"
                                    android:textColor="@color/fontColour1"
                                    android:layout_gravity="center">
                                </TextView>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="10dp"
                                android:layout_marginStart="20dp">

                                <ImageButton
                                    android:id="@+id/animal"
                                    android:contentDescription="@string/animal"
                                    android:layout_width="150dp"
                                    android:layout_height="150dp"
                                    android:background="@drawable/animal" />

                                <TextView
                                    android:id="@+id/animalTitle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="10dp"
                                    android:text="@string/animal"
                                    android:textSize="20sp"
                                    android:textColor="@color/fontColour1"
                                    android:layout_gravity="center">
                                </TextView>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="10dp"
                                android:layout_marginStart="20dp">

                                <ImageButton
                                    android:id="@+id/beekeeping"
                                    android:contentDescription="@string/beekeeping"
                                    android:layout_width="150dp"
                                    android:layout_height="150dp"
                                    android:background="@drawable/honey" />

                                <TextView
                                    android:id="@+id/beekeepingTitle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="10dp"
                                    android:text="@string/beekeeping"
                                    android:textSize="20sp"
                                    android:textColor="@color/fontColour1"
                                    android:layout_gravity="center">
                                </TextView>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="10dp"
                                android:layout_marginStart="20dp">

                                <ImageButton
                                    android:id="@+id/viticulture"
                                    android:contentDescription="@string/viticulture"
                                    android:layout_width="150dp"
                                    android:layout_height="150dp"
                                    android:background="@drawable/viticulture" />

                                <TextView
                                    android:id="@+id/viticultureTitle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="10dp"
                                    android:text="@string/viticulture"
                                    android:textSize="20sp"
                                    android:textColor="@color/fontColour1"
                                    android:layout_gravity="center">
                                </TextView>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="10dp"
                                android:layout_marginStart="20dp">

                                <ImageButton
                                    android:id="@+id/foodPers"
                                    android:contentDescription="@string/preserved_goods_image"
                                    android:layout_width="150dp"
                                    android:layout_height="150dp"
                                    android:background="@drawable/pers" />

                                <TextView
                                    android:id="@+id/foodPersTitle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="10dp"
                                    android:text="@string/preservedFood"
                                    android:textSize="20sp"
                                    android:textColor="@color/fontColour1"
                                    android:layout_gravity="center">
                                </TextView>
                            </LinearLayout>


                        </LinearLayout>
                    </HorizontalScrollView>
                </LinearLayout>
                <TextView
                    android:id="@+id/reccs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/alsoLiked"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@color/fontColour1"
                    android:padding="15dp"
                    android:layout_marginStart="15dp">
                </TextView>
                <HorizontalScrollView
                    android:id="@+id/horizontalScrollProducts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="1dp"
                    android:layout_marginBottom="1dp"
                    android:foregroundGravity="center_vertical">
                <LinearLayout
                    android:id="@+id/arrayProducts"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:foregroundGravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp">

                </LinearLayout>
            </HorizontalScrollView>
                <TextView
                    android:id="@+id/recAdded"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/recently_added_near_you"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@color/fontColour1"
                    android:padding="15dp"
                    android:layout_marginStart="15dp">
                </TextView>
                <HorizontalScrollView
                    android:id="@+id/horizontalScrollRecAdded"
                    android:contentDescription="@string/recently_added_near_you"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="1dp"
                    android:layout_marginBottom="1dp"
                    android:foregroundGravity="center_vertical">

                    <LinearLayout
                        android:id="@+id/arrayProductsRecAdded"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:foregroundGravity="center"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_marginStart="20dp"
                        android:layout_marginBottom="40dp"
                        android:layout_marginEnd="20dp">

                    </LinearLayout>
                </HorizontalScrollView>
                <TextView
                    android:id="@+id/sameSeller"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/by_the_same_seller"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@color/fontColour1"
                    android:padding="15dp"
                    android:layout_marginStart="15dp">
                </TextView>
                <HorizontalScrollView
                    android:id="@+id/horizontalScrollsameSeller"
                    android:contentDescription="@string/products_by_a_known_seller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="1dp"
                    android:layout_marginBottom="1dp"
                    android:foregroundGravity="center_vertical">

                    <LinearLayout
                        android:id="@+id/arrayProductssameSeller"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:foregroundGravity="center"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_marginStart="20dp"
                        android:layout_marginBottom="40dp"
                        android:layout_marginEnd="20dp">

                    </LinearLayout>
                </HorizontalScrollView>
                <TextView
                    android:id="@+id/yourArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/try_something_different_from_your_area"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@color/fontColour1"
                    android:padding="15dp"
                    android:layout_marginStart="15dp">
                </TextView>
                <HorizontalScrollView
                    android:id="@+id/horizontalScrollyourArea"
                    android:contentDescription="@string/from_your_area_but_different"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="1dp"
                    android:layout_marginBottom="1dp"
                    android:foregroundGravity="center_vertical">

                    <LinearLayout
                        android:id="@+id/arrayProductsyourArea"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:foregroundGravity="center"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_marginStart="20dp"
                        android:layout_marginBottom="40dp"
                        android:layout_marginEnd="20dp">

                    </LinearLayout>
                </HorizontalScrollView>
                <!-- <Button
                      android:id="@+id/buttonProduct"
                      android:layout_width="match_parent"
                      android:layout_height="120dp"
                      android:layout_marginTop="30dp"
                      android:background="@drawable/list_element"
                      android:drawablePadding="8dp"
                      android:text="Product name"
                      android:textSize="20dp"
                      android:textAlignment="textStart"
                      android:textColor="@color/accentColour2"
                      android:contentDescription="Button Product" />

                  <ImageView
                      android:id="@+id/picturePlace"
                      android:layout_width="150dp"
                      android:layout_height="100dp"
                      android:layout_marginTop="40dp"
                      android:layout_marginLeft="170dp"
                      android:background="@color/inputFieldColor" />-->

            </LinearLayout>
        </ScrollView>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/round_edge_color"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:elevation="8dp"
        android:padding="7dp">

        <ImageButton
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/fontColour1"
            android:contentDescription="@string/home"
            android:padding="25dp"
            android:src="@drawable/home">
        </ImageButton>

        <ImageButton
            android:id="@+id/products"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/fontColour1"
            android:contentDescription="@string/products"
            android:padding="25dp"
            android:src="@drawable/loading">
        </ImageButton>

        <ImageButton
            android:id="@+id/wishlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/fontColour1"
            android:contentDescription="@string/wishlist"
            android:padding="25dp"
            android:src="@drawable/heart">
        </ImageButton>

        <ImageButton
            android:id="@+id/profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/fontColour1"
            android:contentDescription="@string/your_profile"
            android:padding="25dp"
            android:src="@drawable/user">
        </ImageButton>
    </LinearLayout>

</RelativeLayout>