<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20dp">

<LinearLayout
    android:id="@+id/productButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:ignore="MissingConstraints">
    <LinearLayout
        android:id="@+id/product"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:gravity="bottom"
        android:background="@color/inputFieldColor"
        tools:ignore="MissingConstraints,RtlSymmetry">

        <TextView
            android:id="@+id/numeProdus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nume_produs"
            android:textStyle="bold"
            android:textColor="@color/accentColour1"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/location"
            android:textColor="@color/accentColour1"
            android:textSize="20sp" />

    </LinearLayout>
    <View
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:background="@color/background"
        app:layout_constraintTop_toTopOf="@id/productButton"
        app:layout_constraintBottom_toBottomOf="@id/productButton"
        app:layout_constraintEnd_toEndOf="@id/productButton" />
</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>