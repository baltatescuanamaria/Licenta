<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20dp">

    <LinearLayout
        android:id="@+id/productButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingLeft="20dp">

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="@color/accentColour3">

            <LinearLayout
                android:id="@+id/product"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:padding="10dp"
                android:background="@color/accentColour3"
                tools:ignore="MissingConstraints,RtlSymmetry">

                <TextView
                    android:id="@+id/numeProdus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="10dp"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:text="@string/nume_produs"
                    android:textStyle="bold"
                    android:textColor="@color/fontColour1"
                    android:textSize="25sp" />
                <TextView
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingStart="10dp"
                    android:text="@string/location"
                    android:textColor="@color/fontColour1"
                    android:textSize="20sp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="bottom">
                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        android:text="@string/pret"
                        android:layout_gravity="bottom"
                        android:textColor="@color/fontColour1"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/picturePlace"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:background="@color/accentColour2"
                android:backgroundTint="@color/accentColour3"
                android:contentDescription="@string/place_for_a_picture" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>