<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">
    <ImageButton
        android:id="@+id/back_button"
        android:contentDescription="@string/back"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_small_left"
        android:background="@null"
        android:layout_marginTop="25dp">
    </ImageButton>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/back_button"
        android:layout_marginBottom="70dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:orientation="vertical">

        <ImageView
            android:contentDescription="@string/place_for_a_picture"
            android:id="@+id/picturePlace"
            android:layout_width="300dp"
            android:layout_height="230dp"
            android:background="@color/accentColour2"
            android:scaleType="centerCrop" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="25dp">

            <TextView
                android:id="@+id/name_produs"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/nume_produs"
                android:textColor="@color/fontColour1"
                android:textSize="35sp"
                android:paddingStart="10dp"
                android:textStyle="bold"
                tools:ignore="RtlSymmetry">
            </TextView>

            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/location"
                android:textColor="@color/fontColour1"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:paddingStart="10dp"
                tools:ignore="RtlSymmetry">
            </TextView>

            <TextView
                android:id="@+id/pret"
                android:textColor="@color/redish"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/pret"
                android:paddingTop="10dp"
                android:paddingStart="10dp"
                android:textSize="20sp"
                tools:ignore="RtlSymmetry">
            </TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="left"
            tools:ignore="RtlHardcoded">

            <FrameLayout
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="@color/background"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="8dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/button_contact"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:text="@string/contact"
                        android:textColor="@color/background"
                        android:backgroundTint="@color/fontColour1"
                        android:textSize="20sp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:id="@+id/name_seller"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/name"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/fontColour1"
                        android:padding="10dp"
                        android:layout_centerVertical="true"
                        tools:ignore="RelativeOverlap" />
                </RelativeLayout>

            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/accentColour1"
                android:layout_marginTop="5dp">
            </View>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="@string/descriere"
                android:textColor="@color/fontColour1"
                android:layout_marginTop="10dp"
                android:paddingStart="10dp"
                android:textStyle="bold"
                tools:ignore="RtlSymmetry">
            </TextView>

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/fontColour2"
                android:text="@string/descriere"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:paddingStart="10dp"
                android:textStyle="normal"
                tools:ignore="RtlSymmetry">
            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/quantityAvailableTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/available_quantity"
                    android:textColor="@color/fontColour1"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:layout_marginTop="30dp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/titleAvailableQuantity"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:textColorHint="@color/fontColour2"
                    android:textSize="20sp"
                    android:layout_marginTop="5dp"
                    android:autofillHints="name"
                    android:layout_gravity="center"
                    android:background="@color/background"
                    android:textColor="@color/fontColour1">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">
                <TextView
                    android:id="@+id/quantityTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/enter_your_desired_quantity"
                    android:textColor="@color/fontColour1"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:layout_marginTop="30dp"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/wantedQuantity"
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:inputType="number"
                    android:hint="@string/quantity"
                    android:textColorHint="@color/fontColour2"
                    android:layout_marginTop="5dp"
                    android:padding="10dp"
                    android:autofillHints="name"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:background="@color/inputFieldColor"
                    android:textColor="@color/fontColour1">
                </EditText>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:padding="10dp">
            <Button
                android:id="@+id/addItem"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/fontColour1"
                android:padding="15dp"
                android:layout_marginBottom="10dp"
                android:text="@string/add_to_cart"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_gravity="center"
                android:textColor="@color/background"
                android:textSize="20sp" />
            <Button
                android:id="@+id/addToWishlist"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/accentColour2"
                android:padding="15dp"
                android:text="@string/Wishlist"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_gravity="center"
                android:textColor="@color/background"
                android:textSize="20sp" />
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/round_edge_color"
        android:orientation="horizontal"
        android:gravity="center"
        android:elevation="8dp"
        android:padding="7dp">

        <ImageButton
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/fontColour1"
            android:contentDescription="@string/home"
            android:padding="25dp"
            android:src="@drawable/home">
        </ImageButton>

        <ImageButton
            android:id="@+id/products"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/fontColour1"
            android:contentDescription="@string/products"
            android:padding="25dp"
            android:src="@drawable/loading">
        </ImageButton>

        <ImageButton
            android:id="@+id/wishlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/fontColour1"
            android:contentDescription="@string/wishlist"
            android:padding="25dp"
            android:src="@drawable/heart">
        </ImageButton>

        <ImageButton
            android:id="@+id/profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/fontColour1"
            android:contentDescription="@string/your_profile"
            android:padding="25dp"
            android:src="@drawable/user">
        </ImageButton>
    </LinearLayout>

</RelativeLayout>