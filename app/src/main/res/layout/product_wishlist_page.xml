<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">
    <ImageButton
        android:id="@+id/back_button"
        android:contentDescription="@string/back_button"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_small_left"
        android:background="@null"
        android:layout_marginTop="25dp">
    </ImageButton>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/back_button">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/picturePlace"
            android:layout_width="300dp"
            android:layout_height="230dp"
            android:background="@color/accentColour2"
            android:scaleType="centerCrop" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="25dp">

            <TextView
                android:id="@+id/name_produs"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/nume_produs"
                android:textColor="@color/accentColour1"
                android:textSize="35sp"
                android:paddingStart="10dp"
                android:textStyle="bold"
                tools:ignore="RtlSymmetry">
            </TextView>

            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/location"
                android:textColor="@color/accentColour1"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:paddingStart="10dp"
                tools:ignore="RtlSymmetry">
            </TextView>

            <TextView
                android:id="@+id/pret"
                android:textColor="@color/accentColour1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/pret"
                android:paddingTop="10dp"
                android:paddingStart="10dp"
                android:textSize="30sp"
                android:textStyle="italic">
            </TextView>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="left"
            tools:ignore="RtlHardcoded">

            <FrameLayout
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="@color/background"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="8dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/inputFieldColor">
                    <Button
                        android:id="@+id/button_contact"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:text="@string/contact"
                        android:textColor="@color/fontColour1"
                        android:background="@drawable/list_element"
                        android:backgroundTint="@color/fontColour1"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:id="@+id/name_seller"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/name"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/accentColour1"
                        android:padding="10dp"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>

            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/accentColour1"
                android:layout_marginTop="15dp">
            </View>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="@string/descriere"
                android:textColor="@color/accentColour2"
                android:layout_marginTop="10dp"
                android:paddingStart="10dp"
                android:textStyle="bold">
            </TextView>

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/fontColour2"
                android:text="@string/descriere"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:paddingStart="10dp"
                android:textStyle="normal">
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:padding="10dp">
                <Button
                    android:id="@+id/addItem"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/accentColour1"
                    android:padding="15dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/add_to_cart"
                    android:layout_gravity="center"
                    android:textColor="@color/accentColour2"
                    android:textSize="20sp" />
                <Button
                    android:id="@+id/removeToWishlist"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="@color/redish"
                    android:padding="15dp"
                    android:text="@string/remove"
                    android:layout_gravity="center"
                    android:textColor="@color/accentColour1"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/nav"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding = "10dp"
        android:background="@color/accentColour1">
        <ImageButton
            android:id="@+id/home"
            android:contentDescription="home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/accentColour1"
            android:src="@drawable/home"
            android:padding="25dp">
        </ImageButton>
        <ImageButton
            android:id="@+id/message"
            android:contentDescription="messages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/accentColour1"
            android:src="@drawable/envelope"
            android:padding="25dp">
        </ImageButton>
        <ImageButton
            android:id="@+id/products"
            android:contentDescription="products"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/accentColour1"
            android:src="@drawable/loading"
            android:padding="25dp">
        </ImageButton>
        <ImageButton
            android:id="@+id/wishlist"
            android:contentDescription="wishlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/accentColour1"
            android:src="@drawable/heart"
            android:padding="25dp">
        </ImageButton>
        <ImageButton
            android:id="@+id/profile"
            android:contentDescription="your profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/accentColour1"
            android:src="@drawable/user"
            android:padding="25dp">
        </ImageButton>
    </LinearLayout>

</RelativeLayout>