<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:paddingEnd="30dp"
    android:paddingStart="30dp"
    tools:context=".MainActivity">


    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@null"
        android:contentDescription="@string/back_button"
        android:src="@drawable/arrow_small_left"
        tools:ignore="RedundantDescriptionCheck">
    </ImageButton>

    <TextView
            android:id="@+id/Greeting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="75dp"
            android:text="@string/register"
            android:textColor="@color/fontColour1"
            android:textSize="30sp"
            android:textStyle="bold" />
        <View
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/fontColour1"
            android:layout_marginTop="90dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:paddingStart="10dp"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="RtlSymmetry">

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                    <TextView
                        android:id="@+id/name_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/name"
                        android:textColor="@color/fontColour1"
                        android:layout_marginTop="25dp"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/name_input"
                        android:layout_width="340dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        android:autofillHints=""
                        android:background="@color/inputFieldColor"
                        android:hint="@string/name"
                        android:inputType="text"
                        android:padding="10dp"
                        android:textColor="@color/fontColour1"
                        android:textColorHint="@color/inputFieldColor"
                        tools:ignore="DuplicateSpeakableTextCheck">
                    </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_marginStart="10dp"
                android:orientation="vertical">
                    <TextView
                        android:id="@+id/surname_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/surname"
                        android:textColor="@color/fontColour1"
                        android:layout_marginTop="25dp"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/surname_input"
                        android:layout_width="340dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        android:autofillHints=""
                        android:background="@color/inputFieldColor"
                        android:hint="@string/surname"
                        android:inputType="text"
                        android:padding="10dp"
                        android:textColor="@color/fontColour1"
                        android:textColorHint="@color/inputFieldColor"
                        tools:ignore="DuplicateSpeakableTextCheck">
                    </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_marginStart="10dp"
                android:orientation="vertical">
                    <TextView
                        android:id="@+id/username_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/username"
                        android:textColor="@color/fontColour1"
                        android:layout_marginTop="25dp"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/username_input"
                        android:layout_width="340dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        android:autofillHints=""
                        android:background="@color/inputFieldColor"
                        android:hint="@string/username"
                        android:inputType="text"
                        android:padding="10dp"
                        android:textColor="@color/fontColour1"
                        android:textColorHint="@color/inputFieldColor"
                        tools:ignore="DuplicateSpeakableTextCheck">
                    </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_marginStart="10dp"
                android:orientation="vertical">
                    <TextView
                        android:id="@+id/email_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/email"
                        android:textColor="@color/fontColour1"
                        android:layout_marginTop="25dp"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/email_input"
                        android:layout_width="340dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        android:autofillHints=""
                        android:background="@color/inputFieldColor"
                        android:hint="@string/email"
                        android:inputType="textEmailAddress"
                        android:padding="10dp"
                        android:textColor="@color/fontColour1"
                        android:textColorHint="@color/inputFieldColor"
                        tools:ignore="DuplicateSpeakableTextCheck">
                    </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_marginStart="10dp"
                android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/password"
                        android:textColor="@color/fontColour1"
                        android:layout_marginTop="25dp"
                        android:textSize="15sp" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/password_input_layout"
                            android:layout_width="340dp"
                            android:layout_height="wrap_content"
                            app:endIconMode="password_toggle"
                            android:textColorHint="@color/fontColour2"
                            android:hint="@string/password"
                            app:hintEnabled="false">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/password_input"
                                android:layout_width="340dp"
                                android:layout_height="wrap_content"
                                android:background="@color/inputFieldColor"
                                android:inputType="textPassword"
                                android:hint="@string/password"
                                app:hintEnabled="false"
                                android:textColor="@color/fontColour1"
                                android:textColorHint="@color/inputFieldColor"
                                tools:ignore="DuplicateSpeakableTextCheck" />

                        </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_marginStart="10dp"
                android:orientation="vertical">
                    <TextView
                        android:id="@+id/verify_password_title"
                        android:layout_width="340dp"
                        android:layout_height="wrap_content"
                        android:text="@string/verify_password"
                        android:textColor="@color/fontColour1"
                        android:layout_marginTop="25dp"
                        android:textSize="15sp" />
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/verify_password_input_layout"
                        android:layout_width="340dp"
                        android:layout_height="wrap_content"
                        app:endIconMode="password_toggle"
                        android:textColorHint="@color/fontColour2"
                        android:hint="@string/password"
                        app:hintEnabled="false">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/verify_password_input"
                            android:textColorHint="@color/inputFieldColor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPassword"
                            android:hint="@string/password"
                            app:hintEnabled="false"
                            android:background="@color/inputFieldColor"
                            android:textColor="@color/fontColour1"/>

                    </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <Button
                android:id="@+id/next_btn"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:backgroundTint="@color/fontColour1"
                android:padding="15dp"
                android:text="@string/next"
                android:textColor="@color/background"
                android:textSize="20sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:textAlignment="textEnd">

            <TextView
                android:id="@+id/pageNr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/_1_2"
                android:textColor="@color/fontColour1"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>