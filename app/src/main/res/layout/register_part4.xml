<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:paddingEnd="30dp"
    android:paddingStart="30dp"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@null"
        android:contentDescription="@string/back_button"
        android:src="@drawable/arrow_small_left"
        tools:ignore="RedundantDescriptionCheck">
    </ImageButton>

    <TextView
        android:id="@+id/Greeting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="75dp"
        android:text="@string/register"
        android:textColor="@color/fontColour1"
        android:textSize="30sp"
        android:textStyle="bold" />
    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/fontColour1"
        android:layout_marginTop="90dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:paddingStart="10dp"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="RtlSymmetry">

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_marginStart="10dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/phone_number_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/phone_number"
                    android:textColor="@color/fontColour1"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/phone_number_input"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="5dp"
                    android:autofillHints="name"
                    android:background="@color/inputFieldColor"
                    android:hint="@string/phone_number"
                    android:inputType="phone"
                    android:padding="10dp"
                    android:textColor="@color/fontColour1"
                    android:textColorHint="@color/inputFieldColor"
                    tools:ignore="DuplicateSpeakableTextCheck">
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_marginStart="10dp"
                android:orientation="vertical">
                    <TextView
                        android:id="@+id/city_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/city"
                        android:textColor="@color/fontColour1"
                        android:layout_marginTop="25dp"
                        android:textSize="15sp" />

                <EditText
                    android:id="@+id/city_input"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="5dp"
                    android:autofillHints="name"
                    android:background="@color/inputFieldColor"
                    android:hint="@string/city"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="@color/fontColour1"
                    android:textColorHint="@color/inputFieldColor"
                    tools:ignore="DuplicateSpeakableTextCheck">
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_marginStart="10dp"
                android:orientation="vertical">
                    <TextView
                        android:id="@+id/country_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/country"
                        android:textColor="@color/fontColour1"
                        android:layout_marginTop="25dp"
                        android:textSize="15sp" />

                <EditText
                    android:id="@+id/country_input"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="5dp"
                    android:autofillHints="name"
                    android:background="@color/inputFieldColor"
                    android:hint="@string/country"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="@color/fontColour1"
                    android:textColorHint="@color/inputFieldColor"
                    tools:ignore="DuplicateSpeakableTextCheck">
                </EditText>
            </LinearLayout>


            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_marginStart="10dp"
                android:orientation="vertical">
                    <TextView
                        android:id="@+id/address_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/address"
                        android:textColor="@color/fontColour1"
                        android:layout_marginTop="25dp"
                        android:textSize="15sp" />

                <EditText
                    android:id="@+id/street_input"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="5dp"
                    android:autofillHints="name"
                    android:background="@color/inputFieldColor"
                    android:hint="@string/address"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="@color/fontColour1"
                    android:textColorHint="@color/inputFieldColor"
                    tools:ignore="DuplicateSpeakableTextCheck">
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_marginStart="10dp"
                android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/address_number"
                        android:textColor="@color/fontColour1"
                        android:layout_marginTop="25dp"
                        android:textSize="15sp" />

                <EditText
                    android:id="@+id/address_number_input"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="5dp"
                    android:autofillHints="name"
                    android:background="@color/inputFieldColor"
                    android:hint="@string/address_number"
                    android:inputType="number"
                    android:padding="10dp"
                    android:textColor="@color/fontColour1"
                    android:textColorHint="@color/inputFieldColor"
                    tools:ignore="DuplicateSpeakableTextCheck">
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/register_btn"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:backgroundTint="@color/fontColour1"
                    android:padding="15dp"
                    android:text="@string/register"
                    android:textColor="@color/background"
                    android:textSize="20sp"
                    tools:ignore="DuplicateSpeakableTextCheck" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/pageNr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/_2_2"
                    android:textColor="@color/fontColour1"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
</RelativeLayout>