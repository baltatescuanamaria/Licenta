<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="30dp"
    tools:context=".MainActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Greeting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Register (cont.)"
                android:textColor="@color/fontColour1"
                android:textSize="30dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/phoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:background="@drawable/round_edge"
                android:hint="Phone Number"
                android:inputType="textPhonetic"
                android:textColor="@color/fontColour1"
                android:padding="17dp"
                android:textColorHint="@color/fontColour2"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/phoneError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/redish"
                android:visibility="gone" />

            <EditText
                android:id="@+id/city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="@drawable/round_edge"
                android:hint="City"
                android:inputType="text"
                android:textColor="@color/fontColour1"
                android:padding="17dp"
                android:textColorHint="@color/fontColour2"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/cityError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/redish"
                android:visibility="gone" />

            <EditText
                android:id="@+id/country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="@drawable/round_edge"
                android:hint="Country"
                android:inputType="text"
                android:textColor="@color/fontColour1"
                android:padding="17dp"
                android:textColorHint="@color/fontColour2"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/countryError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/redish"
                android:visibility="gone" />

            <TextView
                android:id="@+id/Address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Address Information"
                android:textColor="@color/fontColour1"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/address_street"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="@drawable/round_edge"
                android:hint="Street"
                android:inputType="text"
                android:textColor="@color/fontColour1"
                android:padding="17dp"
                android:textColorHint="@color/fontColour2"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/streetError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/redish"
                android:visibility="gone" />

            <EditText
                android:id="@+id/address_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="@drawable/round_edge"
                android:hint="Number"
                android:inputType="text"
                android:textColor="@color/fontColour1"
                android:padding="17dp"
                android:textColorHint="@color/fontColour2"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/noError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/redish"
                android:visibility="gone" />

            <Button
                android:id="@+id/register_btn"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:backgroundTint="@color/accentColour1"
                android:padding="15dp"
                android:text="Register"
                android:textColor="@color/fontColour2"
                android:textSize="20sp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/pageNr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="2/2"
                android:textColor="@color/fontColour1"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>